@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 mb-4">
    <div class="row pt-3">
        <div class="col-6">
            <h2>Tickets</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ticket" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Ticket 
            </a>
        </div>
    </div>
</div>

<table class="display table table-hover" >
    <thead>
        <tr class="table-primary">
            <th scope="col">Title</th>
            <th scope="col">Project</th>
            <th scope="col">Description</th>
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Project.Title</td>
                <td>@ticket.Description</td>
                <td>@ticket.Created</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Project" asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Project" asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-warning"><i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
