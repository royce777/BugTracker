@model List<UserRolesViewModel>

@{
    string userId = ViewBag.userId;
    string userName = ViewBag.userName;
}


<div class="card border-primary mb-3 mt-3" >
  <div class="card-header bg-primary text-white"><h3>Manage roles of : @userName</h3></div>
  <form method="post">
  <div class="card-body">
      @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        <div asp-validation-summary="All" class="text-danger"></div>
   </div>
   <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Users" 
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
     </form>
 </div>
