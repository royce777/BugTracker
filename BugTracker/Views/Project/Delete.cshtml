
@model Project

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-2 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Project</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description"  disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

