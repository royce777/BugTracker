
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3 mb-4">
    <div class="row pt-3">
        <div class="col-6">
            <h2>Projects</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Project" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Project
            </a>
        </div>
    </div>
</div>

<div class="container">
    <table class="w-100 display table table-hover" >
        <thead>
            <tr class="table-primary">
                <th data-priority="1" scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th data-priority="2" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var proj in Model)
            {
                <tr>
                    <td>@proj.Title</td>
                    <td>@proj.Description</td>
                    <td>@proj.Date</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Project" asp-action="Details" asp-route-id="@proj.Id" class="btn btn-dark"><i class="bi bi-info-square"></i></a>
                            <a asp-controller="Project" asp-action="Edit" asp-route-id="@proj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Project" asp-action="Delete" asp-route-id="@proj.Id" class="btn btn-warning"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
